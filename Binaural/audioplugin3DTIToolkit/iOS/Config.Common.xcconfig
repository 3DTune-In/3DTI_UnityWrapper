OTHER_CFLAGS = -D_3DTI_AXIS_CONVENTION_UNITY -D_3DTI_ANGLE_CONVENTION_LISTEN

// 3DTune-In 3rd party
CEREAL = $(_3DTI_THIRD_PARTY)/CEREAL
CEREAL_HEADERS = $(CEREAL)/include

_3DTI_RESUORCE_MGR = $(_3DTI_PATH)/3dti_ResourceManager
