// 3DTune-In accumulated
_3DTI_HEADERS = $(_3DTI_RESUORCE_MGR) $(_3DTI_TOOLKIT) $(CEREAL_HEADERS)

// ALL accumulated
HEADER_SEARCH_PATHS = $(_3DTI_HEADERS)
